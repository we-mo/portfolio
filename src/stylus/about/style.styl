
 @import "../common/define.styl";
 @import "../common/easing.styl";
 @import "../common/reset.styl";
 @import "../common/layout.styl";

/* -------------------------------------------------
    common
-------------------------------------------------- */
body {
    overflow-y: scroll;
}

.wrap {
    width: 60%;
    margin: 0 auto;
}

/* -------------------------------------------------
    profile
-------------------------------------------------- */
.profile {
    padding-top: 270px;
    font-size: 18px;
}

.profile-title {
    display: none;
}

.profile-birthday {
    margin-top: 16px;
}

.profile-text {
    margin-top: 40px;
    font-size: 16px;
    line-height: 2.2;
}

.profile-text::after {
    display: block;
    content: '';
    width: 100%;
    height: 1px;
    margin-top: 100px;
    background-color: #bfbfbf;
}

/* -------------------------------------------------
    about
-------------------------------------------------- */
.about-camera {
    display: flex;
    padding-top: 100px;
}

.about-title {
    width: 90px;
    font-size: 20px;
}

.about-list {
    width: 37vw;
    margin-left: 10vw;
    font-size: 16px;
    li {
        margin-top: 16px;
        line-height: 1.3;
    }
}

.about-film {
    display: flex;
    padding: 100px 0px 200px;
}

@media screen and (max-width: $SW) {  

    .wrap {
        width: 80%;
    }

    .header-nav ul li:nth-child(2)::before {
        display: none;
    }

    .profile {
        padding-top: 30vw;
        font-size: 3vw;
    }

    .profile-title {
        display: block;
        margin: 3vw 0vw 10vw;
        font-size: 4vw;
        text-align: center;
    }
    
    .profile-birthday {
        margin-top: 3vw;
    }
    
    .profile-text {
        margin-top: 10vw;
        font-size: 2.4vw;
    }

    .profile-text::after {
        margin-top: 12vw;
    }

    .about-camera {
        padding-top: 12vw;
    }
    
    .about-title {
        font-size: 3vw;
    }
    
    .about-list {
        width: 58vw;
        margin-left: 10vw;
        font-size: 2.4vw;
        li {
            margin-top: 2.2vw;
        }
    }
    
    .about-film {
        padding: 12vw 0 20vw;
    }

}