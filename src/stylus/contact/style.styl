
 @import "../common/define.styl";
 @import "../common/easing.styl";
 @import "../common/reset.styl";
 @import "../common/layout.styl";


.contact-title {
    display: none;
}

.contact-instagram {
    margin-top: 400px;
    font-size: 18px;
    text-align: center;
}

.contact-sns-title {
    font-size: 24px;
}

.contact-text {
    margin-top: 20px;
}

.contact-email {
    margin-top: 70px;
    font-size: 18px;
    text-align: center;
}

@media screen and (max-width: $SW) {

    .contact {
        padding-top: 30vw;
    }

    .contact-title {
        display: block;
        margin: 3vw 0vw 5vw;
        font-size: 4vw;
        text-align: center;
    }

    .contact-instagram {
        margin-top: 20vw;
        font-size: 2.6vw;
    }

    .contact-sns-title {
        font-size: 3vw;
    }

    .contact-text {
        margin-top: 5vw;
    }

    .contact-email {
        font-size: 2.6vw;
    }

}